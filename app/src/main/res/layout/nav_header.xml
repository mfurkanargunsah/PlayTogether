<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgStartColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_height="100dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop"
                android:id="@+id/nav_header_userPic"
                android:layout_height="100dp"
                />
          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:gravity="end"
                  android:paddingTop="10dp"
                  android:layout_gravity="top"
                  android:orientation="horizontal"
                  android:layout_height="50dp">
                  <ImageView
                      android:layout_width="wrap_content"
                      android:src="@drawable/ic_coin"
                      android:layout_height="wrap_content"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:textColor="@color/white"
                      android:textSize="20sp"
                      android:id="@+id/nav_user_coin"
                      android:textStyle="bold"
                      android:paddingRight="20dp"
                      android:layout_height="wrap_content"/>

              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:gravity="bottom"
                  android:orientation="horizontal"
                  android:layout_height="50dp">


                  <TextView
                      android:layout_width="match_parent"
                      android:text="Free Coin"
                      android:textColor="@color/white"
                      android:paddingRight="20dp"
                      android:textSize="20sp"
                      android:gravity="end"
                      android:id="@+id/nav_earn_free_coin"
                      android:layout_height="50dp"/>

                  <cn.iwgang.countdownview.CountdownView
                      android:layout_width="wrap_content"
                      android:id="@+id/nav_coin_timer"
                      android:layout_height="wrap_content"
                      app:isHideTimeBackground="true"
                      app:isShowDay="false"
                      app:isShowHour="true"
                      app:isShowMinute="true"
                      app:isShowSecond="true"
                      app:isShowMillisecond="false"
                      app:timeTextColor="@color/white"
                      app:timeTextSize="22sp"
                      app:isTimeTextBold="true"
                      app:suffixGravity="bottom"
                      app:suffixTextColor="#000000"
                      app:suffixTextSize="12sp"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="110dp"
                      android:layout_gravity="end"
                      app:suffixHour=""
                      app:suffixMinute=""
                      app:suffixSecond=""
                      app:suffixMillisecond="" />


              </LinearLayout>


          </LinearLayout>




        </LinearLayout>



        <TextView
            android:id="@+id/showUserMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="user@domain.com"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/showStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="Status"
                android:paddingTop="10dp"
                android:textColor="@color/white"
                android:textSize="17sp" />
            <Button
                android:layout_marginRight="150dp"
                android:layout_marginBottom="40dp"
                android:textSize="10dp"
                android:id="@+id/nav_header_buyPremium"
                android:backgroundTint="@color/loginButtonColor"
                android:visibility="gone"
                android:layout_width="110dp"
                android:text="buy premium"
                android:layout_height="33dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>