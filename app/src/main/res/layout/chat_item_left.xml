<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/chat_item_txtMesaj"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="6dp"
        android:layout_marginTop="2dp"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:background="@drawable/chat_item_bg_left"
        android:text="Selam"
        />

    <ImageView
        android:id="@+id/chat_item_imgResim"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/chat_item_bg_left"
        android:padding="8dp"
        android:scaleType="centerCrop" />
    <ProgressBar
        android:layout_width="70dp"
        android:layout_alignRight="@+id/chat_item_imgResim"
        android:layout_alignLeft="@+id/chat_item_imgResim"

        android:layout_centerVertical="true"
        android:id="@+id/chat_item_progress"
        android:layout_height="70dp"/>
</RelativeLayout>