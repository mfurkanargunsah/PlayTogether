<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context=".Fragment.deleteChatDialog">

    <LinearLayout
        android:layout_width="300dp"
        android:background="@drawable/spinner_bg"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:layout_height="200dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_warning"
                android:layout_height="70dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="Bu Sohbeti Sildiğinizde Yeniden Eşleşene Kadar Mesaj Gönderemezsiniz!"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:paddingRight="13dp"
            android:paddingLeft="13dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="19dp"
            android:layout_height="match_parent">


                <Button
                    android:layout_width="75dp"
                    android:layout_marginLeft="40dp"
                    android:text="İptal"
                    android:id="@+id/delete_chat_dialog_btnCancel"
                    android:textSize="9sp"
                    android:layout_height="40dp" />

            <Button
                android:layout_width="75dp"
                android:layout_marginLeft="70dp"
                android:backgroundTint="@color/errorColor"
                android:text="Onayla"
                android:id="@+id/delete_chat_dialog_btnDelete"
                android:textSize="9sp"
                android:layout_height="40dp" />


        </LinearLayout>


    </LinearLayout>




</RelativeLayout>